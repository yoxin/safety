<?xml version="1.0" encoding="utf-8"?>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
	<TextView 
	    android:id="@+id/tv_black_number"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:layout_marginLeft="5dp"
	    android:textSize="24sp"
	    android:textColor="@android:color/black"
	    android:text="18819457936"/>
	
    <TextView 
	    android:id="@+id/tv_black_mode"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/tv_black_number"
	    android:layout_alignLeft="@id/tv_black_number"
	    android:textSize="22sp"
	    android:textColor="@android:color/darker_gray"
	    android:text="短信拦截"/>
    
    <ImageView 
        android:id="@+id/iv_black_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/select_image_delete"/>

</RelativeLayout>
